{
    "app-id": "io.gitlab.zehkira.Monophony",
    "runtime": "org.gnome.Platform",
    "runtime-version": "46",
    "sdk": "org.gnome.Sdk",
    "command": "monophony",
    "finish-args": [
        "--socket=pulseaudio",
        "--socket=wayland",
        "--socket=fallback-x11",
        "--share=ipc",
        "--share=network",
        "--device=dri",
        "--own-name=org.mpris.MediaPlayer2.Monophony"
    ],
    "modules": [
        "python3-modules.json",
        {
            "name": "monophony",
            "buildsystem": "simple",
            "build-commands": [
                "mv source/bin/yt-dlp ${FLATPAK_DEST}/bin/",
                "cd source && make prefix=${FLATPAK_DEST} install"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.com/zehkira/monophony.git",
                    "tag": "v2.10.0-pre.1",
                    "commit": "aa25b5d40df96f7c44a15d2b96beda549e57d11d"
                }
            ]
        }
    ]
}
