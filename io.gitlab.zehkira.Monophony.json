{
	"app-id": "io.gitlab.zehkira.Monophony",
	"runtime": "org.gnome.Platform",
	"runtime-version": "46",
	"sdk": "org.gnome.Sdk",
	"command": "monophony",
	"finish-args": [
		"--socket=pulseaudio",
		"--socket=wayland",
		"--socket=fallback-x11",
		"--share=ipc",
		"--share=network",
		"--device=dri",
		"--own-name=org.mpris.MediaPlayer2.Monophony"
	],
	"modules": [
		"python3-modules.json",
		{
			"name": "yt-dlp",
			"buildsystem": "simple",
			"build-commands": [
				"chmod +x yt-dlp",
				"mv yt-dlp ${FLATPAK_DEST}/bin/"
			],
			"sources": [{
				"type": "file",
				"url": "https://github.com/yt-dlp/yt-dlp/releases/download/2024.08.01/yt-dlp",
				"sha256": "d56bab5258b993f28d7cd73c638aabbbec674901ef2e764619142ad37b4a0975"
			}]
		},
		{
			"name": "monophony",
			"buildsystem": "simple",
			"build-commands": [
				"cd source && make prefix=${FLATPAK_DEST} install"
			],
			"sources": [
				{
					"type": "git",
					"url": "https://gitlab.com/zehkira/monophony.git",
					"tag": "v2.14.0-pre.2",
					"commit": "36bd6c730d0bedd53a489b1c75e291b305ee3e3d"
				}
			]
		}
	]
}
