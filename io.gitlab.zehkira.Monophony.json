{
    "app-id": "io.gitlab.zehkira.Monophony",
    "runtime": "org.gnome.Platform",
    "runtime-version": "45",
    "sdk": "org.gnome.Sdk",
    "command": "monophony",
    "finish-args": [
        "--socket=pulseaudio",
        "--socket=wayland",
        "--socket=fallback-x11",
        "--share=ipc",
        "--share=network",
        "--device=dri",
        "--own-name=org.mpris.MediaPlayer2.monophony"
    ],
    "modules": [
        "python3-modules.json",
        {
            "name": "monophony",
            "buildsystem": "simple",
            "build-commands": [
                "cd source && make build",
                "cd source && make prefix=${FLATPAK_DEST} install"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.com/zehkira/monophony.git",
                    "tag": "v2.4.0",
                    "commit": "dd5a9b0c595ea77ae19c83aaa0755e2cd1da5d9c"
                }
            ],
            "post-install": [
                "pip3 uninstall -y nuitka ordered-set"
            ]
        }
    ]
}
